<div class="container my-5">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><%= @restaurant.name %></h2>
    </div>
    <div class="m-3">
      <%= link_to 'Back to Home', restaurants_path, class: 'btn btn-secondary' %>
    </div>

    <div class="card-body">
      <p class="mb-2"><strong>Address:</strong> <%= @restaurant.address %></p>
      <p class="mb-2"><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
      <p class="mb-0"><strong>Category:</strong> <%= @restaurant.category %></p>

      <% if @restaurant.reviews.any? %>
        <hr>
        <h5 class="mt-4">Reviews</h5>
        <ul class="list-group">
          <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item">
              <strong>Rating:</strong> <%= review.rating %>/5 <br>
              <%= review.content %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="mt-4">No reviews available for this restaurant.</p>
      <% end %>

      <div class="mt-4 d-flex justify-content-end">
        <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
